{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Screen Crab",
    "version": "0.0.1"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "./icons/cuddlyferris.png",
      "iconAsTemplate": true
    },
    "macOSPrivateApi": true,
    "allowlist": {
      "all": true,
      "os": {
        "all": true
      },
      "fs": {
        "scope": ["/*/**"],
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true
      },
      "globalShortcut": {
        "all": true
      },
      "notification": {
        "all": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
        "setResizable": true,
        "setCursorGrab": true,
        "setCursorIcon": true
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope": [
          { "name": "bin/ffmpeg", "sidecar": true },
          { "name": "bin/prtools", "sidecar": true }
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.screencrab",
      "category": "Productivity",
      "appimage": {
        "bundleMediaFramework": true
      },
      "macOS": {
        "minimumSystemVersion": "10.13",
        "entitlements": "entitlements.plist"
      },
      "windows": {
        "webviewInstallMode": {
          "type": "offlineInstaller"
        },
        "nsis": {
          "headerImage": "icons/Square150x57Logo.bmp",
          "sidebarImage": "icons/Square164x314Logo.bmp",
          "installerIcon": "icons/128x128@2x.png"
        }
      },
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": [
        "bin/ffmpeg",
        "bin/prtools"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "",
        "label": "start_window",
        "width": 0,
        "height": 0,
        "visible": false
      }
    ]
  }
}
